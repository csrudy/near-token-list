{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "outDir": "lib",
    "baseUrl": "src",
    "declaration": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/*.test.ts", "node_modules", "**/node_modules"]
}
